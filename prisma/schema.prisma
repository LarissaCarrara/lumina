generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id            Int           @id @default(autoincrement()) 
  nome          String        
  email         String        @unique 
  senha         String        
  criadoEm      DateTime      @default(now()) 
  atualizadoEm  DateTime      @updatedAt
  profissionais Atendimento[] // Relacionamento com atendimentos
}

model Profissional {
  id           Int           @id @default(autoincrement()) 
  nome         String        
  email        String        @unique 
  formacao     String        
  atualizadoEm DateTime      @updatedAt
  usuarios     Atendimento[] // Relacionamento com atendimentos
}

model Atendimento {
  id            Int           @id @default(autoincrement())
  usuario       Usuario       @relation(fields: [usuarioId], references: [id])
  usuarioId     Int
  profissional  Profissional  @relation(fields: [profissionalId], references: [id])
  profissionalId Int
  dataAtendimento DateTime    @default(now()) // Momento do atendimento
}
